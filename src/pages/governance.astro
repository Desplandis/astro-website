---
import PageLayout from '@layouts/PageLayout.astro';
import Card from '@components/ui/Card.astro';
import { getCollection } from 'astro:content';

const governanceDocs = await getCollection('governance');
const sortedDocs = governanceDocs.sort(
  (a, b) => (a.data.order || 999) - (b.data.order || 999)
);

const docsByCategory = sortedDocs.reduce((acc, doc) => {
  const category = doc.data.category;
  if (!acc[category]) acc[category] = [];
  acc[category].push(doc);
  return acc;
}, {} as Record<string, typeof sortedDocs>);
---

<PageLayout
  title="Governance"
  description="Transparent, community-driven governance for long-term sustainability and collective decision-making."
>
  <div class="governance-page">
    <div class="container">
      <header class="page-header">
        <h1>Governance</h1>
        <p class="page-description">
          iTowns operates as a commons with transparent, community-driven
          governance. Decisions are made collectively, and sustainability is
          prioritized over short-term profits.
        </p>
      </header>

      <div class="governance-content">
        {
          Object.entries(docsByCategory).map(([category, docs]) => (
            <section class="category-section">
              <h2 class="category-title">{category.replace('-', ' ')}</h2>
              <div class="docs-grid">
                {docs.map((doc) => (
                  <Card href={`/governance/${doc.slug}`}>
                    <h3>{doc.data.title}</h3>
                    <p>{doc.data.summary}</p>
                    <time
                      datetime={doc.data.lastUpdated.toISOString()}
                      class="last-updated"
                    >
                      Last updated:{' '}
                      {doc.data.lastUpdated.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                  </Card>
                ))}
              </div>
            </section>
          ))
        }
      </div>
    </div>
  </div>
</PageLayout>

<style>
  .governance-page {
    padding: var(--space-8) 0;
  }

  .page-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-9);
  }

  .page-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  .category-section {
    margin-bottom: var(--space-9);
  }

  .category-title {
    text-transform: capitalize;
    margin-bottom: var(--space-5);
  }

  .docs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-5);
  }

  .docs-grid h3 {
    font-size: var(--text-xl);
    margin-bottom: var(--space-3);
  }

  .docs-grid p {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  .last-updated {
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  @media (max-width: 768px) {
    .docs-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

