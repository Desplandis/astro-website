---
import PageLayout from '@layouts/PageLayout.astro';
import Card from '@components/ui/Card.astro';
import { getCollection } from 'astro:content';
import { formatDate, sortByDateDesc, filterDrafts } from '@utils/dates';

const allPosts = await getCollection('blog');
const publishedPosts = sortByDateDesc(filterDrafts(allPosts));
---

<PageLayout
  title="Blog"
  description="Framework updates, governance communication, and technical insights from the iTowns community."
>
  <div class="blog-page">
    <div class="container">
      <header class="page-header">
        <h1>Blog</h1>
        <p class="page-description">
          Framework updates, governance communication, and technical insights
          from the iTowns community.
        </p>
      </header>

      {
        publishedPosts.length > 0 ? (
          <div class="posts-grid">
            {publishedPosts.map((post) => (
              <Card href={`/blog/${post.slug}`} class="post-card">
                <article>
                  <time
                    datetime={post.data.publishDate.toISOString()}
                    class="post-date"
                  >
                    {formatDate(post.data.publishDate)}
                  </time>
                  <h2 class="post-title">{post.data.title}</h2>
                  <p class="post-summary">{post.data.summary}</p>
                  <div class="post-meta">
                    <span class="audience" data-audience={post.data.audience}>
                      {post.data.audience}
                    </span>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="tags">
                        {post.data.tags.slice(0, 2).map((tag) => (
                          <span class="tag">{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </article>
              </Card>
            ))}
          </div>
        ) : (
          <p class="no-posts">No blog posts yet. Check back soon!</p>
        )
      }
    </div>
  </div>
</PageLayout>

<style>
  .blog-page {
    padding: var(--space-8) 0;
  }

  .page-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-8);
  }

  .page-header h1 {
    margin-bottom: var(--space-4);
  }

  .page-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  .posts-grid {
    display: grid;
    gap: var(--space-5);
    max-width: 800px;
    margin: 0 auto;
  }

  .post-card article {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-tertiary);
  }

  .post-title {
    font-size: var(--text-2xl);
    margin: 0;
    color: var(--color-text-primary);
  }

  .post-summary {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .audience {
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: capitalize;
  }

  .tags {
    display: flex;
    gap: var(--space-2);
  }

  .tag {
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-bg-secondary);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    color: var(--color-text-tertiary);
  }

  .no-posts {
    text-align: center;
    color: var(--color-text-tertiary);
    font-size: var(--text-lg);
    padding: var(--space-8) 0;
  }
</style>

