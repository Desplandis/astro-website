---
import { getCollection } from 'astro:content';
import BlogLayout from '@layouts/BlogLayout.astro';
import { sortByDateDesc, filterDrafts } from '@utils/dates';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const publishedPosts = sortByDateDesc(filterDrafts(allPosts));

  return publishedPosts.map((post, index) => {
    // Get previous and next posts for navigation
    const prevPost =
      index > 0
        ? { slug: publishedPosts[index - 1].slug, title: publishedPosts[index - 1].data.title }
        : null;
    const nextPost =
      index < publishedPosts.length - 1
        ? { slug: publishedPosts[index + 1].slug, title: publishedPosts[index + 1].data.title }
        : null;

    return {
      params: { slug: post.slug },
      props: { post, prevPost, nextPost },
    };
  });
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();
---

<BlogLayout
  title={post.data.title}
  summary={post.data.summary}
  publishDate={post.data.publishDate}
  updatedDate={post.data.updatedDate}
  audience={post.data.audience}
  tags={post.data.tags}
  author={post.data.author}
  featured={post.data.featured}
  rawContent={post.body}
  prevPost={prevPost}
  nextPost={nextPost}
>
  <Content />
</BlogLayout>
