---
interface Props {
  audience?: 'developers' | 'executives' | 'both';
  class?: string;
}

const { audience, class: className } = Astro.props;

const audienceLabels = {
  developers: 'For Developers',
  executives: 'For Decision-Makers',
  both: 'For Everyone',
};

const label = audience ? audienceLabels[audience] : null;
---

{
  label && (
    <span
      class:list={['badge', `audience-${audience}`, className]}
      data-audience={audience}
    >
      {label}
    </span>
  )
}

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .audience-developers {
    background-color: rgba(37, 99, 235, 0.1);
    color: var(--color-accent-primary);
  }

  .audience-executives {
    background-color: rgba(22, 163, 74, 0.1);
    color: var(--color-success);
  }

  .audience-both {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
  }
</style>

